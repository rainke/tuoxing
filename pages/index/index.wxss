swiper-item image {
  width: 100%;
}
.orange-block{
  height: 30rpx;
  background-color: #f7931e;
  border-top: 1px solid #fff;
}
.nav {
  padding: 60rpx 30rpx;
  background: url(http://wap.tuoxingwang.com/style/wap/images/index/index-nav-bg.jpg) repeat center;
}
.nav-top, .nav-bottom{
  display: flex;
}

.nav-top>view, .nav-bottom>view {
  flex: 1;
  text-align: center;
}

.nav-bottom {
  margin-top: 40rpx;
}

.nav image {
  width: 120rpx;
  height: 120rpx;
}

view.block{
  height: 15rpx;
  background-color: #f5f5f5;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.destination .info,
.perfect .info,
.well-sale .info {
  padding: 30rpx;
}

.popular {
  display: flex;
  flex-wrap: wrap;
}

.popular > view {
  width: 33.3333%;
}

.popular .dest-img image {
  width:80%;
  height: 180rpx;
}
.resort-title {
  font-size: 18px;
  padding: 15rpx;
}
.resort-desc {
  font-size: 12px;
  color: #666;
  padding-bottom: 30rpx;
}
.resort-price {
  font-size: 16px;
  color: #f63;
  padding-bottom: 30rpx;
}

.perfect image {
  width: 100%;
  height:400rpx;
}
